<!DOCTYPE html>
<html ng-app="ootd">
<head>
  <title>OOTD Collection</title>
  <!-- <base href="/"> -->
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1><%= link_to 'OOTD Collection', root_path %></h1>
<a ui-sref="products">Products</a>
<% if current_user %>
	<% if current_user.is_admin? %>
		<%= link_to "Users", users_path %>
		<%= link_to "Products", products_path %>
	<% end %>
<% end %>

<div id="auth-links">
	<% if current_user %>
		<%= current_user.email %> | <%= link_to 'Logout', logout_path %>
	<% else %>
		<%= link_to 'Login', login_path %>
	<% end %>
</div>


<%= yield %>

</body>
</html>
