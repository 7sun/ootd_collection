<!DOCTYPE html>
<html ng-app="ootd">
	<head>
	  <title>OOTD Collection</title>
	  <%= stylesheet_link_tag    'application', media: 'all' %>
	  <%= javascript_include_tag 'application' %>
	  <%= favicon_link_tag 'favicon.ico' %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<header>
			<div class="header-container">
				<%= render 'logo' %>

				<div id="auth-links">
					<% if current_user %>
						<% if current_user.is_admin? %>
							<p><%= link_to "admin", admin_root_path %> | <%= link_to 'logout', logout_path %></p>
						<% else %>
							<%= current_user.email %> | <%= link_to 'logout', logout_path %>
						<% end %>
					<% else %>
						<%= link_to 'Login', login_path %>
					<% end %>
				</div>

				<div id="social-group">
					<a href="http://facebook.com" target="_blank">
						<span class="fa-stack fa-lg">
						  <i class="fa fa-circle fa-stack-2x"></i>
						  <i class="social fa fa-facebook fa-stack-1x"></i>
						</span>
					</a>
					<a href="https://instagram.com/ootd.collection/" target="_blank">
						<span class="fa-stack fa-lg">
						  <i class="fa fa-circle fa-stack-2x"></i>
						  <i class="social fa fa-instagram fa-stack-1x"></i>
						</span>
					</a>
					<a href="https://twitter.com" target="_blank">
						<span class="fa-stack fa-lg">
						  <i class="fa fa-circle fa-stack-2x"></i>
						  <i class="social fa fa-twitter fa-stack-1x"></i>
						</span>
					</a>
				</div>

				<nav class="site-nav">
					<ul>
						<% if current_user %>
							<li><a ui-sref="products" ui-sref-active="active">collection</a></li>
						<% else %>
							<li><a href="/login">products</a></li>
						<% end %>
						<li><a ui-sref="lookbook" ui-sref-active="active">lookbook</a></li>
						<li><a ui-sref="about" ui-sref-active="active">about</a></li>
						<li><a ui-sref="contact" ui-sref-active="active">contact</a></li>
						<li><a ui-sref="userfavorites" ui-sref-active="active"><i class="fa fa-heart-o red"></i></a></li>
					</ul>
				</nav>

			</div>


		</header>

		<div id="main-container">
			<%= yield %>
		</div>

	</body>
</html>
