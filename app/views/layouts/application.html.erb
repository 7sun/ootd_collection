<!DOCTYPE html>
<html ng-app="ootd">
<head>
  <title>OOTD Collection</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1><%= link_to 'OOTD Collection', root_path %></h1>

<nav class="site-nav">
	<ul>
		<li ng-show="currentUser"><a ui-sref="products">products</a></li>
		<li ng-hide="currentUser"><a href="/login">products</a></li>
		<li><a ui-sref="about">about</a></li>
		<li><a ui-sref="contact">contact</a></li>
		<li><a ui-sref="stockists">stockists</a></li>
		<li><a href="https://instagram.com/ootd.collection/" target="_blank">#ootdcollection</a></li>
	</ul>
</nav>

<% if current_user %>
	<a ui-sref="userfavorites">Favorites</a>
	<% if current_user.is_admin? %>
		<%= link_to "Admin", admin_root_path %>
	<% end %>
<% end %>

<div id="auth-links">
	<% if current_user %>
		<%= current_user.email %> | <%= link_to 'Logout', logout_path %>
	<% else %>
		<%= link_to 'Login', login_path %>
	<% end %>
</div>

<%= yield %>

</body>
</html>
